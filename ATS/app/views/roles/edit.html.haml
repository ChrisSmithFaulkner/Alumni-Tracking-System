%h2 Edit role

= form_tag role_path(@role), :method => :put do

    %div{:class => 'form-group'}
        = label :role, :name, 'Name'
        = text_field :role, :name, :class => 'form-control'
    
    %div{:class => 'form-group'}
        = submit_tag "Submit", :class => 'btn btn-primary'
  
  
%p
    = link_to 'Back to Details Page', role_path(@role)
