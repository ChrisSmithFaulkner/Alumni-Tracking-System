%h2 Details about #{@student.first_name}


%ul#details
 %li
  Name:
  = @student.first_name + " "
  = @student.middle_name + " "
  = @student.last_name
 %li
  Cell Phone:
   = @student.cell_number
  %li
  Home Phone:
   = @student.home_number 
  %li
  Work Phone:
   = @student.work_number
  %li
   Email:
   = @student.primary_email
  %li
   Secondary Email:
   = @student.secondary_email
%ul#degrees


%ul#work_history



= link_to 'Edit info', edit_student_path(@student)

= button_to 'Delete', student_path(@student), :method => :delete, :confirm => 'Are you sure?'

= link_to 'Back to student list', student_path