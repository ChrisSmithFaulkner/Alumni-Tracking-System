%h1 All students
= render :partial => 'shared/flash', :locals => { :flash => flash }
%table#student.table
  %thead
    %tr
      %th First Name
      %th Last Name
      %th Degree
      %th Grad Year
      %th Grad Term
      %th More Info

  %tbody
    - @earned_degrees.each do |earnded|
      %tr
        %td= earnded.first_name
        %td= earnded.last_name
        %td= earnded.degree_name 
        %td= earnded.year_graduated 
        %td= earnded.season
        %td= link_to "More about #{earnded.first_name}", student_path(earnded.student_id)

%p
  = link_to 'Add New Student', new_student_path        
%p
  = link_to 'Home Page', root_path
  
