= form_tag degree_path(@degree), :method => :put do

  %div{:class => 'form-group'}
    = render :partial => 'degrees_form_fields'
    = render :partial => 'departments/departments_dropdown'
    = select_tag 'degree_type_id', options_for_select(@degree_types.collect{ |u| [u.name, u.id] })

  %div{:class => 'form-group'}
    = submit_tag 'Save Changes', :class => 'btn btn-primary'
  
%p
  = render partial: 'shared/cancel_button', locals: {path: degree_path(@degree)}
%p
  = render partial: 'shared/back_to_list_button', locals: {list_name: "Degree List", path: degrees_path}