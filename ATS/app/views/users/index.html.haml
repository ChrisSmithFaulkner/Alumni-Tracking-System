%h1 All users
#flash-display
    - flash.each do |type, msg|
        %div{:class => "alert alert-#{type == :notice ? "success" : type} fadeout", "data-dismiss" => "alert"}
            %button.close &times;
            = msg if msg.is_a?(String)
%table#users.table
    %thead
        %tr
            %th Name
            %th Email
            %th uid
            %th oauth_token
            %th Edit
    %tbody
        - @users.each do|user|
            %tr
                %td= user.name
                %td= user.email
                %td= user.uid
                %td= user.oauth_token
                %td= link_to "Edit #{user.name}", edit_user_path(user)
             

%p
    = render partial: 'shared/new_button', locals: {new_name: "User", path: new_user_path}   
%p
    = render partial: 'shared/home_page_button'